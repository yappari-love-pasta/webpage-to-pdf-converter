{
  "manifest_version": 3,
  "name": "Webpage to PDF/JPEG Converter",
  "version": "1.0.0",
  "description": "閲覧中のウェブページ全体を1枚のJPEGまたはPDFとして保存するツール",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "ページをキャプチャ"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["libs/html2canvas.min.js", "content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "libs/html2canvas.min.js",
        "libs/jspdf.umd.min.js",
        "dashboard.html",
        "dashboard.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
